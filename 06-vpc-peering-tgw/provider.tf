terraform {
  backend "s3" {}

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.70.0"
    }
  }
  required_version = ">=1.5.0"
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      CreatedBy   = "terraform"
      Environment = "prd"
    }
  }
}
